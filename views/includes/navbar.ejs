<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }
  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }
  .search-btn i {
    display: inline;
    margin-right: 0.5rem;
  }
  .Search-inp {
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
    font-size: 1rem;
  }
  .navbar-brand {
    margin-left: 10px;
  }
  .end-link {
    margin-right: 10px;
  }
  /* .smallSizedDropdown {
    display: none;
  } */
  .navToHideWhenSmall {
    display: block;
  }
  .SmallBtn {
    background-color: #fe424d !important;
    border-color: #fe424d !important;
    display: none;
  }
  .SmallExplore {
    display: none;
    text-decoration: none;
    color: black;
  }
  .SmallScreenDropDown {
    width: 200px;
  }

  @media screen and (max-width: 770px) {
    .navToHideWhenSmall {
      display: none;
    }
    .SmallBtn {
      display: inline;
    }
    .SmallExplore {
      display: inline;
    }
  }
</style>

<nav
  class="navbar navbar-expand-md navbar-light bg-body-light border-bottom sticky-top"
>
  <a class="navbar-brand" href="/listings"
    ><i class="fa-regular fa-compass"></i>
    <a href="/listings" class="SmallExplore">Explore</a>
  </a>
  <div style="margin-top: 0rem" class="dropdown bigSizedDropdown">
    <button
      class="btn btn-secondary SmallBtn"
      type="button"
      data-bs-toggle="dropdown"
      aria-expanded="false"
    >
      <i class="fa-solid fa-bars"></i>
    </button>
    <ul class="dropdown-menu dropdown-menu-end SmallScreenDropDown">
      <li>
        <div class="ms-auto">
          <form
            method="get"
            action="/listings/filtered"
            role="search"
            class="d-flex"
          >
            <input
              type="search"
              class="form-control me-2"
              placeholder="Search"
              name="search-query"
            />
            <button class="btn search-btn btn-sm" type="submit">
              <i class="fa-solid fa-magnifying-glass"></i>
            </button>
          </form>
        </div>
      </li>
      <li>
        <a class="dropdown-item" href="/listings/new">Airbnb your home</a>
      </li>
      <% if(!currUser){%>
      <li>
        <a class="dropdown-item" href="/listings/userRelated/signup">Signup</a>
      </li>
      <li>
        <a class="dropdown-item" href="/listings/userRelated/login">Login</a>
      </li>
      <% }%><% if(currUser){%>
      <li>
        <a class="dropdown-item" href="/listings/userRelated/logout">Logout</a>
      </li>
      <% }%>
    </ul>
  </div>

  <button
    class="navbar-toggler navToHideWhenSmall"
    type="button"
    data-toggle="collapse"
    data-target="#navbarNavAltMarkup"
  >
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
      <a class="nav-item nav-link" href="/listings">Explore</a>
    </div>

    <div class="navbar-nav ms-auto">
      <form
        method="get"
        action="/listings/filtered"
        role="search"
        class="d-flex"
      >
        <input
          type="search"
          class="form-control me-2 Search-inp"
          placeholder="Search destinations"
          name="search-query"
        />
        <button class="btn search-btn" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i>Search
        </button>
      </form>
    </div>

    <div class="navbar-nav ms-auto">
      <a class="nav-item nav-link" href="/listings/new">Airbnb your home</a>
      <% if(!currUser){%>
      <a class="nav-link" href="/listings/userRelated/signup"><b>Signup</b></a>
      <a class="nav-link end-link" href="/listings/userRelated/login"
        ><b>Log in</b></a
      >
      <% }%><% if(currUser){%>
      <a class="nav-link end-link" href="/listings/userRelated/logout"
        ><b>Log out</b></a
      >
      <% }%>
    </div>
  </div>
</nav>
